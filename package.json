{
  "name": "pulse",
  "version": "0.1.0",
  "description": "A lightweight reactive state engine with dependency tracking and automatic updates",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./minimal": {
      "import": "./dist/bundle-optimization.js",
      "types": "./dist/bundle-optimization.d.ts"
    }
  },
  "sideEffects": false,
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "reactive",
    "state",
    "signals",
    "framework",
    "svelte",
    "reactivity"
  ],
  "author": "TedoNeObichaJavaScript",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  }
}


